<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundButton">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:onClick"></item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:stateListAnimator">"@null"</item>


    </style>
    <style name="OrangeButton" parent="RoundButton">
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="BlackButton" parent="RoundButton">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="EqualButton" parent="RoundButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
    </style>
</resources>